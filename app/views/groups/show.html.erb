    <%= render :partial => "/shared/sidebar" %>
<% end %>


<h2> Contacts </h2>

<%= form_tag group_path(@group) , :method => 'get', :id => "gs2" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
   
  </p>
<% end %>

 <div id="contacts"><%= render 'contacts' %></div>

